        android:id="@+id/BTNaddgradingsystem"
        android:layout_width="300.0dip"
        android:layout_height="wrap_content"
        android:layout_marginTop="16.0dip"
        android:onClick="grading"
        android:paddingBottom="10.0dip"
        android:paddingLeft="20.0dip"
        android:paddingRight="20.0dip"
        android:paddingTop="10.0dip"
        fancy:fb_borderColor="#ffffffff"
        fancy:fb_borderWidth="1.0dip"
        fancy:fb_defaultColor="@color/colorButtonDark"
        fancy:fb_focusColor="@color/colorButtonLight"
        fancy:fb_iconPosition="left"
        fancy:fb_radius="6.0dip"
        fancy:fb_text="ADD GRADING SYSTEM"
        fancy:fb_textColor="#ffffffff" />
</LinearLayout>