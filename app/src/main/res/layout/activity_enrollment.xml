<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <LinearLayout
        android:padding="16dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



    <TextView
        android:id="@+id/textViewSchool"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16.0dip"
        android:layout_marginTop="12.0dip"
        android:gravity="center"
        android:text="Medium Text"
        android:textAppearance="?android:textAppearanceMedium" />

    <TextView
        android:id="@id/textViewNames"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="ENROLLMENT" />

    <EditText
        android:id="@+id/names"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Name">

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/admn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Enter SEALs ID" />

    <EditText
        android:id="@+id/kcpe"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter SEALs Education Level"
        android:inputType="number" />

    <EditText
        android:id="@+id/cls"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Enter DOB" />

        <EditText
            android:id="@+id/email"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Email Address" />

        <EditText
            android:id="@+id/homecountycode"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Select Home County Code " />

    <EditText
        android:id="@+id/phone"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Parents Phone Number"
        android:inputType="phone" />

    <ImageView
        android:onClick="pick_image"
        android:layout_gravity="center"
        android:src="@drawable/ic_person_add_black_24dp"
        android:id="@+id/imgPupil"
        android:layout_width="100dp"
        android:layout_height="100dp" />

    <Button
        android:layout_marginBottom="10dp"
        android:id="@+id/se"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Submit" />



    <Button
        android:onClick="pick_image"
        android:layout_marginBottom="10dp"
        android:id="@+id/photoBtn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Iris camera?Get IRIS " />

    <Button
        android:layout_marginBottom="10dp"
        android:id="@+id/BTNuploadCSV"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="CSV FILE?Browse " />

    </LinearLayout>
</ScrollView>